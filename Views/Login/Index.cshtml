@if (SessionHelper.CheckSessionLogin(Context))
{

    <h3>Logout user: @SessionHelper.GetUserFromSession(Context).Email</h3>

    <a class="btn btn-danger" asp-action="logout" type="submit" >Logout</a>
    <a class="btn btn-link" asp-controller="home" asp-action="Index">Cancel</a>
}
else
{
    <h2>Login</h2>
    <a class="btn btn-primary" asp-action="Login">Login</a>
    <a class="btn btn-link" asp-action="Register">Register</a>
}