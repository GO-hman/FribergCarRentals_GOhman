@model FribergCarRentals_GOhman.Models.Car

@{
    ViewData["Title"] = "Details";
}

<div>
    <h3>@Model.Model @Model.ModelYear</h3>
    <hr />
    <img class="img-gallery" src="@Model.ImgURL" alt="Picture of car" />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gearbox)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gearbox)
        </dd>
        <dt class="col-sm-2">
            Price per day (SEK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerDay)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-link" asp-action="Index">Back to List</a>
</div>