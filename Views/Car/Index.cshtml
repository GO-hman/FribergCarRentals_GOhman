@model IEnumerable<FribergCarRentals_GOhman.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex flex-wrap justify-content-center">
        @foreach (var item in Model)
        {
            <div class="card-container">
                <div class="card">
                    <img src="@item.ImgURL" class="card-img-top card-img-custom" alt="Picture of car">
                    <div class="card-body">
                        <h5 class="card-title">@item.Model @item.ModelYear</h5>
                        @if(@item.PricePerDay < 1000)
                        {
                            <p class="card-text" style="color: green; font-weight: bold;">@item.PricePerDay SEK/day</p>

                        }
                        else
                        {
                            <p class="card-text">@item.PricePerDay SEK/day</p>
                        }
                        <div class="d-flex justify-content-between justify-content-center">
                        <a asp-action="BookCar" asp-route-id="@item.Id" class=" btn btn-primary">Book</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
