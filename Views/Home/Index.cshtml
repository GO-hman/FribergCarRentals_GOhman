@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    @{
        if (SessionHelper.CheckSessionLogin(Context))
        {
            <h3>Welcome @SessionHelper.GetUserFromSession(Context).Email</h3>
        }
        else{
            <h3 class="display-4">Welcome</h3>

        }
    }

    @{
        if(Context.Session.GetString("style") == "retro"){
            <img class="index-logo" src="~/Friberg_LOGO_Pixel.png" alt="white logo">
        }
        else
        {
            <img class="index-logo" src="~/Friberg_LOGO.png" alt="white logo">
        }
    }
    <br />
</div>