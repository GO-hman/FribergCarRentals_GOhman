@model FribergCarRentals_GOhman.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create" >
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="StopDate" />
    <input type="hidden" asp-for="CarId" />
    <input type="hidden" asp-for="Car"/>

    <h5>Booking:</h5>
    <ul>
        <li>@Model.StartDate</li>
        <li>@Model.StopDate</li>
        <li>@Model.Car.Model</li>
    </ul>
    <p>Select user:</p>
   @*  <a asp-for="@Model.UserId">@Html.DropDownList("UserList")</a> *@
    
    <select asp-for="@Model.UserId" asp-items="@Model.UserAccounts">Select user</select>
    <input class="btn btn-primary" type="submit" value="Confirm" />
    <a class="btn btn-link" asp-action="Index">Cancel</a>
    

</form>